<h1>生徒診断情報一覧</h1>

<%= link_to 'New contact', new_check_path, class: "btn btn-info float-right" %>

<div>
  <%= search_form_for @q do |f| %>
    <div class="input-group">
      <%= f.search_field :user_student_name_cont, class: "form-control offset-sm-8", placeholder: "ユーザ検索" %>
      <%= button_tag type: "submit", class: "input-group-append input-group-text" do %>
          <i class="fas fa-search"></i>
        <% end %>
    </div>
  <% end %>
</div>


  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>User_Student</th>
        <th>Compreated_at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @checks.each do |check| %>
        <tr>
          <td><%= check.user_student.name.truncate(15) %></td>
          <td><%= l check.created_at, format: :check %></td>
          <td><%= link_to 'Show', check_path(check), class: "text-info" %></td>
          <td><%= link_to 'Edit', edit_check_path(check), class: "text-info" %></td>
          <td><%= link_to 'Destroy', check, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @checks %>
