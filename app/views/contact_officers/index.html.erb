<h1>投稿一覧</h1>

<%= link_to 'New contact', new_contact_officer_path, class: "btn btn-info float-right" %>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_officers.each do |contact_officer| %>
      <tr>
        <td><%= contact_officer.user_officer.name.truncate(15) %></td>
        <td><%= contact_officer.title.truncate(15) %></td>
        <td><%= contact_officer.content.truncate(15) %></td>
        <td><%= link_to 'Show', contact_officer, class: "text-info" %></td>
        <% if current_user_officer == contact_officer.user_officer %>
          <td><%= link_to 'Edit', edit_contact_officer_path(contact_officer), class: "text-info" %></td>
          <td><%= link_to 'Destroy', contact_officer, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-info" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
