<%= form_with(model: contact_student, local: true) do |f| %>
  <div class="m-4 p-2">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", size: "100x10" %>
    </div>

    <div class="form-group">
      <%= f.label :image, class: "btn btn-info" do %>
        <i class="far fa-image"> 画像ファイルを選択</i>
      <% end %>
      <%= f.file_field :image, class: "image_form", style: "display: none;"%>
    </div>

    <div class="form-row">
      <div class="col">
        <%= f.submit "送信", class: "btn btn-info form-control" %>
      </div>
      <div class="col">
        <%= link_to "戻る", contact_students_path, class: "btn btn-outline-info form-control" %>
      </div>
    </div>
  </div>
<% end %>
