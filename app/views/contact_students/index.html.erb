<h1>投稿一覧</h1>

<%= link_to 'New contact', new_contact_student_path, class: "btn btn-info float-right" %>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_students.each do |contact_student| %>
      <tr>
        <td><%= contact_student.user_student.name.truncate(15) %></td>
        <td><%= contact_student.title.truncate(15) %></td>
        <td><%= contact_student.content.truncate(15) %></td>
        <td><%= link_to 'Show', contact_student, class: "text-info" %></td>
        <% if current_user_student == contact_student.user_student %>
          <td><%= link_to 'Edit', edit_contact_student_path(contact_student), class: "text-info" %></td>
          <td><%= link_to 'Destroy', contact_student, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-info" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
