<div class="mx-auto p-4" style="border:solid 1px #343a40; max-width:700px;">
  <h2>Forgot your password?</h2>
  <br>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "user_officers/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="actions mt-4">
      <%= f.submit "Send me reset password instructions", class: "form-control btn btn-info" %>
    </div>
  <% end %>
</div>

<div class="mt-4 mx-auto p-4" style="border:solid 1px #343a40; max-width:700px;">
  <%= render "user_officers/shared/links" %>
</div>
